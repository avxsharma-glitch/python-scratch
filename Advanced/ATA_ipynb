        "#reversing the number\n",
        "def reverse_num(number):\n",
        "  original_number = number\n",
        "  reversed_number = 0 #intialinsing\n",
        "  while number > 0 :\n",
        "    last_digit = number % 10 #extracting last digit\n",
        "    reversed_number = reversed_number*10 + last_digit\n",
        "    number = number // 10#d=removing last digit from original number\n",
        "  return reversed_number\n",
        "print(reverse_num(98))"

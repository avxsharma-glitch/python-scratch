        "def sum_of_digits(number):\n",
        "  original_number = number\n",
        "  digit_sum = 0\n",
        "  while  number > 0 :\n",
        "    last_digit = number % 10\n",
        "    digit_sum += last_digit\n",
        "    number = number // 10\n",
        "  return digit_sum\n",
        "print(sum_of_digits(123456789))"

        "#to count digits\n",
        "def count_digits(number):\n",
        "  count=0\n",
        "  if number==0:\n",
        "    return 1\n",
        "  number=abs(number)\n",
        "  while number > 0:\n",
        "    number//=10\n",
        "    count+=1\n",
        "  return count\n",
        "\n",
        "print(count_digits(12345))"

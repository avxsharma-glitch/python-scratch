        "def sum_upto_n(n):\n",
        "  result = 0\n",
        "  c = 0\n",
        "  while c < n :\n",
        "    result = result + c\n",
        "    c = c + 1\n",
        "  return result\n",
        "print(sum_upto_n(10))"

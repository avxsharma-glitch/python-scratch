        "#to find factorials\n",
        "def factorial(n):\n",
        "  if n==0:\n",
        "    return 1\n",
        "  elif n < 0:\n",
        "    return \"none\"\n",
        "  else :\n",
        "    result=1\n",
        "  for i in range(1,n+1):\n",
        "      result *= i\n",
        "  return result\n",
        "\n",
        "print(factorial(5))"

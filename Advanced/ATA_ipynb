        "  def inner_a():\n",
        "    p_inner_a = \"hello\" # Renamed to avoid confusion with outer p\n",
        "    print(\"Inner A's p :\" ,p_inner_a)\n",
        "    return p_inner_a\n",
        "\n",
        "  def inner_b(q_inner): # inner_b now accepts an argument q_inner\n",
        "    return p_outer + q_inner # uses p from outer_func and q_inner argument\n",
        "\n",
        "  p_outer = p_outer + 1 # Modifies the p_outer from the outer_func's parameter\n",
        "\n",
        "  a_result = inner_a()\n",
        "  b_result = inner_b(100) # Pass 100 as q_inner to inner_b\n",
        "  return a_result,b_result\n",
        "\n",
        "# To see the output, you need to call outer_func\n",
        "print(outer_func(10)) # Example call with p_outer = 10"

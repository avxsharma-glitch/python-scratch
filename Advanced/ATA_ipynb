        "#spam\n",
        "def classiffy_spam(email_text):\n",
        "  score = 0\n",
        "  if \"urgent\" in email_text.lower() or \"offer\" in email_text.lower() :\n",
        "    score +=2\n",
        "  if email_text.count(\"!\")>3:\n",
        "    score += 1\n",
        "  if \"http\" in email_text.lower():\n",
        "    score +=1\n",
        "  if score >=3:\n",
        "    return \"spam\"\n",
        "  else:\n",
        "    return \"not spam\"\n",
        "\n",
        "print(classiffy_spam(\"urgent offer\"))\n",
        "print(classiffy_spam(\"Check out this cool link:offer offer http://example.com !!!\"))\n",
        "print(classiffy_spam(\"Normal email\"))"

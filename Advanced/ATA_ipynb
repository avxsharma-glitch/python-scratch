      "source": [
        "#horner method - factoring out x from the polynomial terms\n",
        "def horner_eval(coeffs,x):\n",
        "  result = 0\n",
        "  for coef in reversed(coeffs):\n",
        "    result = result * x + coef\n",
        "  return result\n",
        "coeffs= [8,9,7]\n",
        "print(horner_eval(coeffs,3))"

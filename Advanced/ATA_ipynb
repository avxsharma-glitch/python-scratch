      "cell_type": "code",
      "source": [
        "def is_paindrome(number):\n",
        "  original_number = number # Store the original number\n",
        "  reversed_number = 0\n",
        "  while number > 0 :\n",
        "    last_digit = number % 10\n",
        "    reversed_number = reversed_number*10 + last_digit\n",
        "    number = number // 10\n",
        "\n",
        "  # These statements should be outside the while loop and correctly indented\n",
        "  if original_number == reversed_number : # Use == for comparison\n",
        "    print (f\"{original_number} is a palindrome\")\n",
        "    return True\n",
        "  else :\n",
        "    print(f\"{original_number} is not a palindrome\")\n",
        "    return False\n",
        "print(is_paindrome(99))"
      ],
      "metadata": {

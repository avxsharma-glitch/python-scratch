        "#calculating polynomial equation via naive method ,compute each term separately and then add\n",
        "def naive_eval(coeffs,x):\n",
        "  result = 0\n",
        "  for i in range(len(coeffs)):\n",
        "    result += coeffs[i] * (x**i)\n",
        "  return result\n",
        "#evaluate 7 + (-5)x 2(x**2) + 3(x**3) at x = 2\n",
        "coeffs = [7,-5,2,3]\n",
        "print(naive_eval(coeffs,2))"

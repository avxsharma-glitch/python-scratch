        "def fibonacci_nth(n):\n",
        "  if n<= 0 :\n",
        "    print(\"please enter a positive integer\")\n",
        "\n",
        "  if n == 1 :\n",
        "    return 1\n",
        "  if n == 2 :\n",
        "    return 1\n",
        "  first = 0\n",
        "  second = 1\n",
        "  count = 2\n",
        "  while count < n :\n",
        "    next_term = first + second\n",
        "    first = second\n",
        "    second = next_term\n",
        "    count += 1\n",
        "  return second\n",
